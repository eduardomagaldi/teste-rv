@import fonts;

//measurements
wrapperMaxWidth = 1600px;
contentWrapperMaxWidth = 1190px;
contentPadding = 0 40px;
mainFontSize = 19px;
buttonFontSize = 14px;
secondaryTitleFontSize = 16px;
mainTitleFontSize = 60px;

//colors
heroBgColor = #92b8ad;
mainHighlightColor = #542d4c;
lightestColor = #fff;
bgContentColor = #f7f7f7;
discreetColor = #cfcfcf;
secDescreetColor = #dfdfdf;
textColor = #666666;

html,
body
	font-family: 'Rubik';
	background: bgContentColor;
	
.pull-right
	float: right;
	
.fade
	opacity: .2;

.wrapper
	width: 100%;
	margin: 0 auto 30px auto;
	// padding: contentPadding;
	box-sizing: border-box;
	max-width: wrapperMaxWidth;
	
	&.hero-wrapper
		background-color: heroBgColor;
		padding: 0;
	
	&.content-wrapper
		max-width: contentWrapperMaxWidth;
	
.logo
	width: 60px;

.header
	margin-top: 30px;
	flex: 1 100%;
	margin-bottom: 30px;
	
.hero
	background: url('../img/hero.jpg') no-repeat;
	height: 768px;
	width: 100%;
	background-position: center top;
	box-sizing: border-box;
	background-size: cover;
	overflow: hidden;
	font-size: 0;
	padding: contentPadding;
	
	display: flex;
	flex-flow: row wrap;
	
.nav
	float: right;
	font-size: mainFontSize;

	ul
		padding: 0;
		margin: 0;

		> li
			list-style: none;
			display: inline-block;
			margin-left: 40px;
			vertical-align: middle;
			
			a
				text-decoration: none;
				color: mainHighlightColor;
				text-transform: uppercase;
				
				.icon
					width: 35px;
				
.half
	width: 50%;
	display: inline-block;
	font-size: mainFontSize;
	margin-top: -190px;
	padding: 0 20px;
	box-sizing: border-box;
    
.main-title
	font-size: mainTitleFontSize;
	color: mainHighlightColor;
	text-transform: uppercase;
	font-weight: bold;
	margin: 0;
	
.main-paragraph
	color: mainHighlightColor;
	margin-top: 0;
	max-width: 450px;

.btn
	background: mainHighlightColor;
	border-radius: 30px;
	padding: 14px 60px;
	display: inline-block;
	color: lightestColor;
	text-decoration: none;
	font-size: buttonFontSize;
	text-transform: uppercase;
	
.secondaryTitle
	display: inline-block;
	font-size: secondaryTitleFontSize;
	margin-left: 50px;
	text-transform: uppercase;
	margin-right: 30px;
	
	&:first-child
		margin-left: 0;
		
.carousel-cell
	background: white;
	width: 290px;
	height: 408px;
	margin-right: 10px;
	-webkit-transition: opacity .3s;
	transition: opacity .3s;
	padding: 20px;
	text-align: center;
	box-sizing: border-box;
	
	&:last-child
		margin-right: 0;
		
.carousel-title
	font-size: 12px;
	color: discreetColor;
	text-transform: uppercase;
	text-align: left;
	
.md-label
	text-transform: uppercase;
	color: textColor;
	line-height: 2;
	
md-checkbox
	.md-container
		top: 46%;
		
	.md-icon
		border-color: secDescreetColor;